{
  "manifest_version": 3,
  "name": "More Tab Colors",
  "version": "1.1",
  "description": "Change the color of your tabs",
  "permissions": [
    "theme",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Change tab color",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  }
}
